<div class="faq-controls">
  <div class="faq-tabs" id="faq-tabs">
    <button class="faq-tab active" data-cat="all">All</button>
    <button class="faq-tab" data-cat="ordering">Ordering</button>
    <button class="faq-tab" data-cat="software">Software</button>
    <button class="faq-tab" data-cat="specs">Specs & Mods</button>
    <button class="faq-tab" data-cat="warranty">Warranty & Claims</button>
    <button class="faq-tab" data-cat="samples">Samples & Finishes</button>
    <button class="faq-tab" data-cat="general">General</button>
