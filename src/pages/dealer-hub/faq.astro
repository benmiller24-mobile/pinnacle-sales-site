import DealerHubLayout from '../../layouts/DealerHubLayout.astro';
---
<DealerHubLayout title="FAQ & Troubleshooting | Pinnacle Sales Dealer Hub" activeSection="FAQ">

<h1>FAQ & Troubleshooting</h1>
