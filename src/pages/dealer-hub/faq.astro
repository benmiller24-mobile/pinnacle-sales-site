<style is:global>
  .faq-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  .faq-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    flex: 1;
  }
  .faq-tab {
    font-family: var(--font-body);
    font-size: 0.8rem;
    font-weight: 600;
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    border: 1px solid var(--color-border);
    background: #fff;
    color: var(--color-muted);
    cursor: pointer;
    transition: all 0.15s;
  }
  .faq-tab:hover { border-color: #aaa; color: var(--color-dark); }
  .faq-tab.active {
    background: var(--color-dark);
    color: #fff;
    border-color: var(--color-dark);
  }
  .faq-search {
    font-family: var(--font-body);
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    width: 220px;
    outline: none;
    transition: border-color 0.2s;
  }
  .faq-search:focus { border-color: var(--color-dark); }
  .faq-list { margin-bottom: 2rem; }
  .faq-item {
    border: 1px solid var(--color-border);
    border-radius: 6px;
    margin-bottom: 0.5rem;
    overflow: hidden;
    transition: border-color 0.2s;
  }
  .faq-item:hover { border-color: #ccc; }
  .faq-question {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    cursor: pointer;
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-dark);
    line-height: 1.4;
  }
  .faq-question:hover { background: var(--color-bg-alt); }
  .faq-cat-badge {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: 0.15rem 0.5rem;
    border-radius: 3px;
    flex-shrink: 0;
    background: #f0f0f0;
    color: #666;
  }
  .faq-chevron {
    margin-left: auto;
    flex-shrink: 0;
    transition: transform 0.2s;
    font-size: 0.8rem;
    color: var(--color-muted);
  }
  .faq-item.open .faq-chevron { transform: rotate(90deg); }
  .faq-answer {
    display: none;
    padding: 0 1.25rem 1.25rem 1.25rem;
    font-size: 0.9rem;
    color: var(--color-body);
    line-height: 1.7;
  }
  .faq-item.open .faq-answer { display: block; }
  .faq-answer p { margin-bottom: 0.75rem; }
  .faq-answer p:last-child { margin-bottom: 0; }
  .faq-answer a { color: var(--color-dark); font-weight: 600; }
  .faq-answer ul { margin: 0.5rem 0 0.75rem 1.25rem; }
  .faq-answer li { margin-bottom: 0.3rem; font-size: 0.9rem; }
  .faq-empty {
    text-align: center;
    color: var(--color-muted);
    padding: 2rem 0;
    font-size: 0.95rem;
  }
  .faq-still-stuck { margin-top: 1rem; }
  .faq-still-stuck h2 { margin-bottom: 1rem; }
  .faq-stuck-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .faq-stuck-card {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1.25rem;
    text-decoration: none !important;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .faq-stuck-card:hover {
    border-color: #aaa;
    box-shadow: 0 4px 16px rgba(0,0,0,0.06);
    opacity: 1;
  }
  .faq-stuck-icon { font-size: 1.5rem; }
  .faq-stuck-card strong { font-size: 0.95rem; color: var(--color-dark); }
  .faq-stuck-desc { font-size: 0.82rem; color: var(--color-muted); }
  @media (max-width: 860px) {
    .faq-controls { flex-direction: column; }
    .faq-search { width: 100%; }
    .faq-stuck-grid { grid-template-columns: 1fr; }
  }
</style>

<script is:inline>
