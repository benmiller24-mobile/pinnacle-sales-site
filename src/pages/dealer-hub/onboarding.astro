  .fow-content {
    padding: 0 1rem 1rem 3rem;
    font-size: 0.88rem;
    color: var(--color-muted);
    line-height: 1.65;
  }
  .fow-content a {
    color: var(--color-dark);
    font-weight: 600;
  }
  .fow-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
    flex-wrap: wrap;
  }
  .fow-action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0.85rem;
