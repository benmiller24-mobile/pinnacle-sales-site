    display: inline-block;
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-muted);
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }
  .fow-step {
    border: 1px solid var(--color-border);
    border-radius: 8px;
