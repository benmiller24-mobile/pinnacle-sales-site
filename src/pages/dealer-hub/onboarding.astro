  }
  .fow-step.active { border-color: var(--color-dark); }
  .fow-step.done { border-color: #D1FAE5; }
  .fow-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.85rem 1rem;
