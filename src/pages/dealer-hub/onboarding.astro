<script is:inline>
  document.querySelectorAll('.check-box').forEach(function(box) {
    var key = box.getAttribute('data-key');
    if (localStorage.getItem('ps_' + key) === 'checked') {
      box.classList.add('checked');
    }
    box.addEventListener('click', function() {
      box.classList.toggle('checked');
      if (box.classList.contains('checked')) {
        localStorage.setItem('ps_' + key, 'checked');
      } else {
        localStorage.removeItem('ps_' + key);
      }
    });
  });
</script>

<script is:inline>
(function() {
  var WALKTHROUGH = [
    {
      title: "Design the project in 2020 / ProKitchen",
      body: "Open the appropriate Shiloh, Eclipse, or Aspect catalog in 2020 Design or ProKitchen. Specify door style, finish, wood species, modifications, and accessories. Export a preliminary quote for client review.",
      links: [
        { label: "2020 Software Training", href: "/dealer-hub/training-2020-prokitchen" },
        { label: "Product Deep-Dive", href: "/dealer-hub/training-product-deep-dive" }
      ]
    },
    {
      title: "Fill out the Cover Sheet & Order Form",
      body: "Every order requires a completed cover sheet and the correct standard order form for your brand. Watch the cover sheet walkthrough video on the Ordering SOPs page.",
      links: [
        { label: "Ordering SOPs & Forms", href: "/dealer-hub/ordering" },
        { label: "Order Form Selector", href: "/dealer-hub/ordering#order-form-selector" }
      ]
    },
    {
      title: "Add Custom Quote items (if needed)",
      body: "For non-standard sizes, special modifications, or unique configurations, fill out the Custom Quote Worksheet and email to quotes@wwinc.com. Skip this step if your order is entirely standard catalog items.",
      links: [
        { label: "Custom Quote Worksheet", href: "/downloads/custom-quote-worksheet-form.pdf" }
      ]
    },
    {
      title: "Complete Appliance Cutout Sheets (if needed)",
      body: "If the project includes built-in appliances, submit the correct appliance cutout specification form with your order. Download the right form for your brand from the Ordering SOPs page.",
      links: [
        { label: "Appliance Cut Sheets", href: "/dealer-hub/ordering" }
      ]
    },
    {
      title: "Email order to Pinnacle Sales for pre-order review",
      body: "For your first 3-4 projects, email the complete order package (project file, cover sheet, order form, any cutout sheets) to your Pinnacle Sales Dealer Success Specialist. Expect a 48-hour turnaround.",
      links: [
        { label: "Submit for Review", href: "/dealer-hub/submit" }
      ]
    },
    {
      title: "Submit order through WW Wood portal",
      body: "Once approved, submit the order through the WW Wood online ordering portal. Include your PO number, ship-to address, and any special instructions.",
      links: []
    },
    {
      title: "Review your Order Acknowledgment",
      body: "WW Wood sends an acknowledgment confirming specs, pricing, and estimated ship date. You have 1 business day to review and flag changes. Send corrections to orders@wwinc.com.",
      links: []
    },
    {
      title: "Track production & prepare for delivery",
      body: "Standard lead time is approximately 6 weeks. Track order status through the WW Wood portal or email customer.service@wwinc.com with your order number. Inspect all cabinets upon delivery and note any damage on the carrier's bill of lading.",
      links: [
        { label: "Warranty Forms", href: "/dealer-hub/ordering" },
        { label: "Support & Escalation", href: "/dealer-hub/support" }
      ]
    }
  ];

  var container = document.getElementById("first-order-walkthrough");
  if (!container) return;

  var doneSteps = {};
  WALKTHROUGH.forEach(function(_, i) {
    if (localStorage.getItem("fow_" + i) === "done") doneSteps[i] = true;
  });
  var activeIndex = -1;

  function render() {
    var doneCount = Object.keys(doneSteps).length;
    var pct = Math.round((doneCount / WALKTHROUGH.length) * 100);
    var html = "";

    WALKTHROUGH.forEach(function(step, i) {
      var isDone = doneSteps[i];
      var isActive = i === activeIndex;
      var cls = "fow-step" + (isActive ? " active" : "") + (isDone ? " done" : "");
      html += '<div class="' + cls + '" data-fow="' + i + '">';
      html += '<div class="fow-header"><span class="fow-number">' + (isDone ? "✓" : (i + 1)) + '</span>';
      html += '<span class="fow-title">' + step.title + '</span>';
      html += '<span class="fow-chevron">▶</span></div>';
      html += '<div class="fow-body"><div class="fow-content">';
      html += '<p style="margin:0 0 0.5rem;">' + step.body + '</p>';
      if (step.links.length > 0 || !isDone) {
        html += '<div class="fow-actions">';
        step.links.forEach(function(link) {
          html += '<a href="' + link.href + '" class="fow-action-btn">' + link.label + ' →</a>';
        });
        if (!isDone) {
          html += '<button class="fow-done-btn" data-fow-done="' + i + '">Mark Complete</button>';
        }
        html += '</div>';
      }
      html += '</div></div></div>';
    });

    html += '<div class="fow-progress-summary">';
    html += '<div class="fow-progress-track"><div class="fow-progress-fill" style="width:' + pct + '%"></div></div>';
    html += '<span class="fow-progress-text">' + doneCount + ' / ' + WALKTHROUGH.length + ' complete</span>';
    html += '</div>';

    container.innerHTML = html;

    container.querySelectorAll(".fow-header").forEach(function(header) {
      header.addEventListener("click", function() {
        var idx = parseInt(header.parentElement.getAttribute("data-fow"));
        activeIndex = activeIndex === idx ? -1 : idx;
        render();
      });
    });

    container.querySelectorAll(".fow-done-btn").forEach(function(btn) {
      btn.addEventListener("click", function(e) {
        e.stopPropagation();
        var idx = parseInt(btn.getAttribute("data-fow-done"));
        doneSteps[idx] = true;
        localStorage.setItem("fow_" + idx, "done");
        var next = -1;
        for (var j = idx + 1; j < WALKTHROUGH.length; j++) {
          if (!doneSteps[j]) { next = j; break; }
        }
        activeIndex = next;
        render();
      });
    });
  }

  render();
})();
</script>

</DealerHubLayout>

<style is:global>
