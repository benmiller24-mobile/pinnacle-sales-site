    text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-muted);
  }
  .team-table td {
    padding: 0.6rem 0.75rem; border-bottom: 1px solid var(--color-border);
  }
  .team-table a { color: var(--color-dark); }
