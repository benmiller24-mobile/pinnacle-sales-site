    color: var(--color-dark);
    text-decoration: none;
    transition: border-color 0.15s, background 0.15s;
  }
  .fow-action-btn:hover {
    border-color: var(--color-dark);
    background: var(--color-bg-alt);
  }
  .fow-done-btn {
    font-family: var(--font-body);
    padding: 0.4rem 1rem;
    border: none;
    border-radius: 6px;
    font-size: 0.78rem;
    font-weight: 600;
    background: var(--color-dark);
    color: #fff;
    cursor: pointer;
    transition: background 0.15s;
  }
  .fow-done-btn:hover { background: #333; }
  .fow-progress-summary {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1rem;
    padding: 0.6rem 0;
  }
  .fow-progress-track {
    flex: 1;
    height: 4px;
    border-radius: 10px;
    background: var(--color-border);
    overflow: hidden;
  }
  .fow-progress-fill {
    height: 100%;
