<style is:global>
  .dl-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    margin: 1.5rem 0 0.75rem;
  }
  .dl-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    flex: 1;
  }
  .dl-tab {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 20px;
    background: transparent;
    color: var(--color-muted);
    cursor: pointer;
    transition: all 0.15s;
  }
  .dl-tab:hover { border-color: var(--color-dark); color: var(--color-dark); }
  .dl-tab.active {
    background: var(--color-dark);
    border-color: var(--color-dark);
    color: #fff;
  }
  .dl-search-wrap { flex-shrink: 0; }
  .dl-search {
    font-family: var(--font-body);
    font-size: 0.85rem;
    padding: 0.4rem 0.85rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    width: 200px;
    transition: border-color 0.15s;
  }
  .dl-search:focus { outline: none; border-color: var(--color-dark); }
  .dl-count {
    font-size: 0.78rem;
    color: var(--color-muted);
    margin-bottom: 0.75rem;
  }
  .dl-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.5rem;
  }
  .dl-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.7rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    color: var(--color-dark);
    transition: border-color 0.15s, background 0.15s;
  }
  .dl-card:hover {
    border-color: var(--color-dark);
    background: var(--color-bg-alt);
    opacity: 1;
  }
  .dl-card.hidden { display: none; }
  .dl-icon { font-size: 1.1rem; flex-shrink: 0; }
  .dl-info { display: flex; flex-direction: column; gap: 0.1rem; min-width: 0; }
  .dl-name {
    font-size: 0.84rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .dl-meta {
    font-size: 0.7rem;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  @media (max-width: 600px) {
    .dl-search { width: 100%; }
    .dl-controls { flex-direction: column; align-items: stretch; }
  }
</style>

<script is:inline>
(function() {
  var tabs = document.querySelectorAll('.dl-tab');
  var cards = document.querySelectorAll('.dl-card');
  var searchInput = document.getElementById('dl-search');
  var countEl = document.getElementById('dl-count');
  var activeCat = 'all';

  function update() {
    var query = searchInput.value.toLowerCase().trim();
    var visible = 0;
    cards.forEach(function(card) {
      var cat = card.getAttribute('data-cat');
      var name = card.querySelector('.dl-name').textContent.toLowerCase();
      var brand = (card.getAttribute('data-brand') || '').toLowerCase();
      var matchCat = activeCat === 'all' || cat === activeCat;
      var matchSearch = !query || name.indexOf(query) !== -1 || brand.indexOf(query) !== -1 || cat.indexOf(query) !== -1;
      if (matchCat && matchSearch) {
        card.classList.remove('hidden');
        visible++;
      } else {
        card.classList.add('hidden');
      }
    });
    countEl.textContent = visible + ' form' + (visible !== 1 ? 's' : '');
  }

  tabs.forEach(function(tab) {
    tab.addEventListener('click', function() {
      tabs.forEach(function(t) { t.classList.remove('active'); });
      tab.classList.add('active');
      activeCat = tab.getAttribute('data-cat');
      update();
    });
  });

  searchInput.addEventListener('input', update);
  update();
})();
</script>
