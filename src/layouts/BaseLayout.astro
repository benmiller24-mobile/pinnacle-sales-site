---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';

export interface Props {
  title: string;
  description: string;
  schema?: object | object[];
  ogImage?: string;
  article?: { publishedTime: string; modifiedTime?: string; author: string; };
}

const { title, description, schema, ogImage, article } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEOHead title={title} description={description} schema={schema} ogImage={ogImage} article={article} />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet">
  <style is:global>
    :root {
      --color-black: #000000;
      --color-dark: #1a1a1a;
      --color-body: #333333;
      --color-muted: #666666;
      --color-light-text: #999999;
      --color-border: #e0e0e0;
      --color-bg: #ffffff;
      --color-bg-alt: #f7f7f7;
      --color-bg-warm: #faf8f5;
      --color-accent: #c8a96e;
      --color-accent-hover: #b8944e;
      --color-link: #000000;
      --font-body: 'Questrial', 'Helvetica Neue', Arial, sans-serif;
      --max-width: 1200px;
      --max-narrow: 800px;
    }

    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    html { font-size: 16px; scroll-behavior: smooth; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }
    
    body {
      font-family: var(--font-body);
      color: var(--color-body);
      line-height: 1.8;
      background: var(--color-bg);
      letter-spacing: 0.01em;
    }

    img { max-width: 100%; height: auto; display: block; }
    
    a { color: var(--color-link); text-decoration: underline; text-underline-offset: 2px; transition: opacity 0.2s; }
    a:hover { opacity: 0.7; }

    h1, h2, h3, h4, h5, h6 {
      font-family: var(--font-body);
      line-height: 1.3;
      color: var(--color-black);
      font-weight: 400;
      letter-spacing: 0.02em;
    }

    h1 { font-size: 2.5rem; margin-bottom: 1.25rem; letter-spacing: 0.04em; text-transform: uppercase; }
    h2 { font-size: 1.5rem; margin: 2.5rem 0 1rem; letter-spacing: 0.05em; text-transform: uppercase; }
    h3 { font-size: 1.15rem; margin: 1.5rem 0 0.75rem; letter-spacing: 0.03em; }
    h4 { font-size: 0.85rem; letter-spacing: 0.12em; text-transform: uppercase; margin: 1rem 0 0.5rem; }
    
    p { margin-bottom: 1.25rem; }
    
    ul, ol { margin-bottom: 1.25rem; padding-left: 1.5rem; }
    li { margin-bottom: 0.4rem; }

    strong { font-weight: 700; }
    blockquote {
      border-left: 3px solid var(--color-accent);
      padding: 1rem 1.5rem;
      margin: 1.5rem 0;
      color: var(--color-muted);
      font-style: italic;
    }

    .container { max-width: var(--max-width); margin: 0 auto; padding: 0 2rem; }
    .content-narrow { max-width: var(--max-narrow); margin: 0 auto; padding: 0 2rem; }

    .page-header {
      background: var(--color-black);
      color: #fff;
      padding: 5rem 2rem 4rem;
      text-align: center;
    }
    .page-header h1 { color: #fff; font-size: 2rem; margin-bottom: 0.75rem; }
    .page-header p { color: rgba(255,255,255,0.7); font-size: 1.05rem; max-width: 600px; margin: 0 auto; }

    .section { padding: 4rem 0; }
    .section-alt { background: var(--color-bg-alt); }

    .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 2.5rem; }
    .grid-3 { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 2rem; }

    .btn {
      display: inline-block;
      padding: 0.875rem 2.5rem;
      font-family: var(--font-body);
      font-size: 0.8rem;
      font-weight: 400;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      text-decoration: none;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .btn-primary {
      background: var(--color-black);
      color: #fff;
    }
    .btn-primary:hover { background: #333; opacity: 1; }
    .btn-outline {
      background: transparent;
      color: var(--color-black);
      border: 1px solid var(--color-black);
    }
    .btn-outline:hover { background: var(--color-black); color: #fff; opacity: 1; }
    .btn-accent {
      background: var(--color-accent);
      color: var(--color-black);
    }
    .btn-accent:hover { background: var(--color-accent-hover); opacity: 1; }
    .btn-white {
      background: #fff;
      color: var(--color-black);
    }
    .btn-white:hover { background: rgba(255,255,255,0.9); opacity: 1; }

    hr { border: none; border-top: 1px solid var(--color-border); margin: 3rem 0; }

    @media (max-width: 768px) {
      h1 { font-size: 1.75rem; }
      h2 { font-size: 1.25rem; }
      .grid-2, .grid-3 { grid-template-columns: 1fr; }
      .page-header { padding: 3rem 1.5rem 2.5rem; }
      .container, .content-narrow { padding: 0 1.25rem; }
    }
  </style>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>
